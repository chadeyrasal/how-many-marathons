<strong>Record a new run</strong>

<div class="form-wrapper">
    <%= form_for(@run) do |f| %>

        <div class="form-field">
            <%= f.label :date %><br>
            <%= f.date_field :date %><br><br>
        </div>

        <div class="form-field">
            <%= f.label(:distance, "Distance in kilometers, e.g. 4.75") %>:<br>
            <%= f.text_field :distance %><br><br>
        </div>

        <%= f.submit "Record run", class: "submit" %>

    <% end %>
</div>

<p><%= link_to "Back to my page", user_path(current_user) %></p>
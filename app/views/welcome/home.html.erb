<div class="form-wrapper">
    <%= form_tag(sessions_path) do %>

        <div class="field">
            <%= label_tag(:email, "Email address: ") %><br>
            <%= email_field_tag :email %><br><br>
        </div>

        <div class="field">
            <%= label_tag :password %>:<br>
            <%= password_field_tag :password %><br><br>
        </div>

        <%= submit_tag "Log In", class: "submit" %>

    <% end %>
</div>

<p><%= link_to "Don't have an account? Sign up here", signup_path %></p>